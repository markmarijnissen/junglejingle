!!! 5
html(lang='en', ng-app='JungleJingleApp')
  head
    meta(charset='utf-8')
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name='viewport', content='width=device-width', initial-scale='1.0')
    meta(name='description', content='Interactive 2-player web game')
    meta(name='author', content='Mark Marijnissen')
    title Jungle Jingle
    link(rel='stylesheet', href='/css/app.css')
    //if lte IE 7
      script(src='http://cdnjs.cloudflare.com/ajax/libs/json2/20110223/json2.js')
    //if lte IE 8
      script(src='//html5shiv.googlecode.com/svn/trunk/html5.js')
    script.
      window.brunch = window.brunch || {};
      window.brunch['auto-reload'] = {
        enabled: true
      };
    script(src='https://cdn.firebase.com/v0/firebase.js')
    script(src='/js/vendor.js')
    script(src='/js/app.js')
  body(ng-controller='AppCtrl')

  div(ng-switch on="connection()")
    mixin header
      h1 Jungle Jingle

    div(ng-switch-when="loading")
      mixin header()
      p loading
    div(ng-switch-when="waiting")
      mixin header()
      p ask your friend to go to 
        a(href="{{url}}",target="_blank") {{url}}
    div(ng-switch-when="watching")
      mixin header()
      p you can't join this game, there are already two players
      p start a 
        a(href="/{{newCode}}") new game
    
    div(ng-switch-when="playing",ng-controller="GameCtrl")
      div
        p.move a wild {{getOpponentMove()}} appears...
        p.countermove and you select a {{getMyMove()}}
        hr
        p image of the wild {{getOpponentMove()}}
        p Opponent Score: {{opponentScore}}
        hr
      div
        p select your move (you are {{me}}, it is <strong ng-show="!isMyTurn()">not</strong> your turn!)
        p My Score: {{myScore}}
        button(ng-repeat="move in animals",hm-tap="selectMove(move)",ng-disabled="!isMyTurn()") {{move}}
